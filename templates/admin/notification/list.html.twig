{% extends "admin/base.html.twig" %}

{% block body %}
    {{ parent() }}

    <h1 class="mt-2">Notifications</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for notification in notifications %}
                <tr>
                    <td>{{ notification.id }}</td>
                    <td>{{ notification.title }}</td>
                    <td>{{ notification.content|length > 100 ? notification.content|slice(0, 100) ~ '...' : notification.content  }}</td>
                    <td><a href="{{ path("admin_notification_edit", {id: notification.id}) }}">Edit</a> <a href="{{ path("admin_notification_delete", {id: notification.id}) }}" class="text-danger">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
